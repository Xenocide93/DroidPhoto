<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorBackground">@color/global_bg_white</item>
        <item name="android:windowBackground">@color/global_bg_white</item>
        <item name="android:textColorHighlight">@color/global_bg_white</item>
        <!--<item name="android:textColorPrimary">@color/global_text_black</item>-->
        <!--<item name="android:actionMenuTextColor">@color/white</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppRegisterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="AppRegisterTextAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
    </style>

</resources>
