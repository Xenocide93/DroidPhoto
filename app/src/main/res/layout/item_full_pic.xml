<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_white"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0.7"
        android:scaleType="fitCenter"
        android:src="@drawable/droidsans_logo" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="200dp"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/caption_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_textsms_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="caption_test" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_phone_android_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\???" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shutter_speed_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_iso_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/shutter_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\???" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aperture_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_iso_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/aperture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\???" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/iso_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_iso_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\???" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_public_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Bangkok, TH" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_person_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="usertest" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>