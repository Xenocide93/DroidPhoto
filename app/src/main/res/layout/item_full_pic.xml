<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curve_white"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.7"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_black_24dp" />

        <com.droidsans.photo.droidphoto.util.FontTextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="usertest" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_viewer_height"
        android:layout_gravity="center">

        <com.diegocarloslima.byakugallery.lib.TouchImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_viewer_height"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/image_viewer_size"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:rotation="-90"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_circular"/>

        <com.droidsans.photo.droidphoto.util.FontTextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:text="0 %"
            android:visibility="gone"/>

        <include android:id="@+id/reload_view"
            layout="@layout/layout_reload" />

    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="270dp"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/caption_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_textsms_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="caption_test" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_phone_android_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\???" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/shutter_speed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:alpha="0.7"
                        android:src="@drawable/ic_iso_black_24dp" />

                    <com.droidsans.photo.droidphoto.util.FontTextView
                        android:id="@+id/shutter_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="\???" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aperture_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="95dp"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:alpha="0.7"
                        android:src="@drawable/ic_iso_black_24dp" />

                    <com.droidsans.photo.droidphoto.util.FontTextView
                        android:id="@+id/aperture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="\???" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iso_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="180dp"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:alpha="0.7"
                        android:src="@drawable/ic_iso_black_24dp" />

                    <com.droidsans.photo.droidphoto.util.FontTextView
                        android:id="@+id/iso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="\???" />

                </LinearLayout>

            </RelativeLayout>



            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_public_black_24dp" />

                <com.droidsans.photo.droidphoto.util.FontTextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Bangkok, TH" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>